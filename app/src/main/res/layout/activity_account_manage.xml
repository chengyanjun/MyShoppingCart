<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_tint"
    android:orientation="vertical">

    <include layout="@layout/activity_top_text" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/background_tint" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_user_img"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:background="@drawable/button_rec"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:clickable="true"
                android:text="头像"
                android:textColor="@color/title_color"
                android:textSize="32px" />

            <com.shopping.chengzi.myshoppingcart.widget.CirclrImageView
                android:id="@+id/user_img"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:layout_toLeftOf="@+id/user_img_right_arrow"
                android:scaleType="centerInside"
                android:src="@mipmap/default_user_portrait"
                autofit:frameColor="@color/line"
                autofit:widthFrame="1" />

            <ImageView
                android:id="@+id/user_img_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:scaleType="centerInside"
                android:src="@mipmap/right_key_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />

        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_user_name"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/button_rec"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="用户名"
                android:textColor="@color/title_color"
                android:textSize="32px" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50px"
                android:layout_toLeftOf="@+id/user_name_right_arrow"
                android:paddingRight="20px"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_gray" />

            <ImageView
                android:id="@+id/user_name_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:scaleType="centerInside"
                android:src="@mipmap/right_key_small"
                android:visibility="invisible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@color/line"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:background="@color/line" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_change_nick_name"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:background="@drawable/button_rec"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="昵称"
                android:textColor="@color/title_color"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_my_nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="50px"
                android:gravity="right"
                android:paddingRight="20px"
                android:text=""
                android:textSize="32px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:scaleType="centerInside"
                android:src="@mipmap/right_key_small" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:background="@color/line" />


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:background="@drawable/button_rec"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="性别"
                android:textColor="@color/title_color"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_my_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="50px"
                android:gravity="right"
                android:paddingRight="30px"
                android:text=""
                android:textSize="32px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:scaleType="centerInside"
                android:src="@mipmap/right_key_small" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line" />


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_change_birth"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:background="@drawable/button_rec"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="出生日期"
                android:textColor="@color/title_color"
                android:textSize="32px" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="50px"
                android:background="@null"
                android:gravity="right"
                android:paddingRight="30px"
                android:text=""
                android:textSize="32px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:scaleType="centerInside"
                android:src="@mipmap/right_key_small" />

        </com.zhy.autolayout.AutoRelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="@color/background_tint" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/user_address_manage_click"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/button_rec"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="地址管理"
                android:textColor="@color/title_color"
                android:textSize="32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:layout_toLeftOf="@+id/user_address_right_arrow"
                android:text=""
                android:textColor="@color/text_gray" />

            <ImageView
                android:id="@+id/user_address_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:scaleType="centerInside"
                android:src="@mipmap/right_key_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/user_account_safe_click"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/button_rec"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:text="账户安全"
                android:textColor="@color/text"
                android:textSize="32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:layout_toLeftOf="@+id/user_account_right_arrow"
                android:text="可修改密码"
                android:textColor="@color/text_gray"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/user_account_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:scaleType="centerInside"
                android:src="@mipmap/right_key_small" />

        </com.zhy.autolayout.AutoRelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/background_tint" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>