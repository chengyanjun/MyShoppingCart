<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_my_tuijian_goods_gridview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_rec"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_my_tuijian_goods_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <TextView
        android:lineSpacingExtra="4px"
        android:id="@+id/tv_my_tuijian_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:lines="2"
        android:paddingLeft="16px"
        android:paddingRight="10px"
        android:text=""
        android:textColor="@color/text"
        android:textSize="26px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingLeft="16px">

        <TextView
            android:textSize="24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/background_red" />

        <TextView
            android:id="@+id/tv_my_tuijian_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/background_red"
            android:textSize="34px" />

        <TextView
            android:textSize="24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="0人付款"
            android:textColor="@color/text_gray" />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>